#!/bin/bash

intern=eDP1
extern=HDMI2

if xrandr | grep "$extern disconnected"; then
  xrandr --output "$extern" --off
  xwallpaper --center "$HOME/git/.dotfiles/wallpapers/Other_27.jpg"
else
  xrandr --output "$extern" --auto --left-of "$intern"
  xwallpaper --center "$HOME/git/.dotfiles/wallpapers/Other_27.jpg"
fi
