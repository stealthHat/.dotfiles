#!/bin/sh

#my alias
alias \
  pacman='sudo pacman' \
  zshrc='nvim $HOME/git/.dotfiles/.config/zsh/.zshrc' \
  zshalias='nvim $HOME/git/.dotfiles/.config/zsh/.zsh_aliases' \
  tmuxconf='nvim $HOME/git/.dotfiles/.tmux.conf' \
  .='cd $HOME/git/.dotfiles' \
  l='ls -lha --color=auto' \
  ls='ls --color=auto' \
  grep='grep --color=auto' \
	diff='diff --color=auto' \
  zshupdate='source $HOME/.config/zsh/.zshrc' \
  s='git status' \
  vim='nvim' \
  t='terraform' \
  d='sudo docker' \
  sc='sudo systemctl' \
  diff='diff --color=auto' \
  wget='wget --hsts-file ~/.config/wget/wget-hsts'


# ssh 
alias \
  sshconfig='vim $HOME/.ssh/config' \
  sshkey='cat $HOME/.ssh/id_rsa.pub' \
  sshad='ssh-copy-id -i $HOME/.ssh/id_rsa.pub'
