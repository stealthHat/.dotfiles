#!/bin/bash

export VIM_PLUG="https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"

installpkg(){ sudo pacman --noconfirm --needed -S "$1" ;}
aurinstall(){ yay --noconfirm --needed  -S "$1" ;}

# Set the best mirros for my country
mirror_settings () {
  installpkg reflector
  sudo reflector -c Brazil -a 6 --sort rate --save /etc/pacman.d/mirrorlist
}

basepkgs () {
  for x in curl base-devel git xdg-user-dir; do
  	installpkg "$x"
  done
  xdg-user-dir-update
}

pacman_config () { 
  grep -q "^Color" /etc/pacman.conf || sudo sed -i "s/^#Color$/Color/" /etc/pacman.conf
  grep -q "ILoveCandy" /etc/pacman.conf || sudo sed -i "/#VerbosePkgLists/a ILoveCandy" /etc/pacman.conf
}


setup_links () {
  local dot_home=$HOME/git/.dotfiles/home/

  find $dot_home -type d -links 2 | sed 's/^.*\.config/\.config/;s/^.*\.local/\.local/' | xargs -I % mkdir -pv "$HOME/b/%"

  cd $dot_home && find $pwd -type f -exec ln -sfv `pwd`/{} `$HOME/b/`{} \;

  #source $HOME/.zprofile
}

pacman_keys () {
  pacman -Q artix-keyring >/dev/null 2>&1 && pacman --noconfirm -S archlinux-keyring >/dev/null 2>&1
	pacman --noconfirm -S archlinux-keyring >/dev/null 2>&1
}

setup_yay () {
  cd $HOME/git && git clone https://aur.archlinux.org/yay.git
  cd $HOME/git/yay && makepkg -si PKGBUILD --noconfirm
  cd $path
}

install_loop () {
  export NVM_DIR="$XDG_DATA_HOME"/nvm
  while IFS=, read -r tag program comment; do 
    [[ "$tag" =~ ^#.*$ ]] && continue
    case "$tag" in
			"A") aurinstall "$program" ;;
			*) installpkg "$program" ;;
		esac
  done < $HOME/git/.dotfiles/install/progs.csv 
}

setup_zsh () {
  export ZSH=$HOME/.config/zsh/.oh-my-zsh 
  chsh -s $(which zsh) 
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" 
}

setup_vim() {
  # Install  neovim plugin mannager 
  [ -d $HOME/git/dwm ] || curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dir\
  $VIM_PLUG
  #install RVM
  gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
  curl -sSL https://get.rvm.io | bash -s -- --path $XDG_CONFIG_HOME/rvm
  refresh
  rvm install ruby
  rvm use ruby --default
  gem install neovim 
  # Install NVM
  npm config set cache $XDG_CACHE_HOME --global 
  nvm install node
  npm i -g neovim
}

tmux_plug () {
  git clone https://github.com/tmux-plugins/tpm $XDG_CONFIG_HOME/tmux/plugins/tpm
}


dwm_tools () {
  local mk="sudo make clean install"
  [ -d $HOME/git/dwm ] || git clone https://github.com/LukeSmithxyz/dwm.git $HOME/git/
  [ -d $HOME/git/dmenu ] || git clone https://git.suckless.org/dmenu $HOME/git/
  [ -d $HOME/git/dmenu ] || git clone https://github.com/LukeSmithxyz/dwmblocks.git $HOME/git/
  pushd dwm && $mk
  popd 
  pushd dmenu && $mk
  popd 
  pushd dwmblocks && $mk
  popd
}

setup_mouse () {
  echo "options psmouse synaptics_intertouch=1" >> /etc/modprobe.d/psmouse.conf
}

clean_up () {
  cd $HOME
  rm -rf .bash* .mkshrc .profile .shell.pre-oh-my-zsh .zcompdump* .zlogin .zshrc .zsh_history .Xauthority &> /dev/null
  rm -rf $HOME/git/.dotfiles/home/.config/zsh/.zlogin &> /dev/null

}

setup_links
