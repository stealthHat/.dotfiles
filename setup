# Directories 
mkdir -pv $HOME/.local/bin ; \

# Symbolic links
ln -sfv $HOME/git/.dotfiles/.zprofile $HOME/ ; \
ln -sfv $HOME/git/.dotfiles/.zprofile $HOME/.profile ; \
ln -sfv $HOME/git/.dotfiles/.tmux.conf $HOME/ ; \
ln -sfv $HOME/git/.dotfiles/.xinitrc $HOME/ ; \
ln -sfv $HOME/git/.dotfiles/.config/* $HOME/.config/ ; \
ln -sfv $HOME/git/.dotfiles/.local/bin/* $HOME/.local/bin/

# Exports 
export ZSH=$HOME/.config/zsh/.oh-my-zsh ; \

# Sourcers
source $HOME/.zprofile ; \
source $HOME/.profile ; \
